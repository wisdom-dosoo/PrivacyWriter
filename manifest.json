{
  "manifest_version": 3,
  "name": "PrivacyWriter - AI Writing Assistant",
  "version": "1.0.0",
  "description": "Privacy-first AI writing assistant. Grammar, tone, translation & summarization. 100% local processing with Chrome's built-in Gemini Nano. Zero data leaves your device.",
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "PrivacyWriter - AI Writing Assistant"
  },
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus",
    "sidePanel"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  
  "commands": {
    "open_sidepanel": {
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "Command+Shift+P"
      },
      "description": "Open PrivacyWriter AI Assistant"
    },
    "check_grammar": {
      "suggested_key": {
        "default": "Ctrl+Shift+G",
        "mac": "Command+Shift+G"
      },
      "description": "Check grammar of selected text"
    },
    "summarize": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Summarize selected text"
    }
  },
  
  "web_accessible_resources": [
    {
      "resources": ["icons/*", "payment-sus.html", "landing-page.html", "upgrade.html", "public/*"],
      "matches": ["<all_urls>"]
    }
  ],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },

  "minimum_chrome_version": "138",
  
  "author": "PrivacyWriter",
  "homepage_url": "https://privacywriter.app"
}